<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FastLearner.Pages.MainTicketPage">
  <Label Text="{Binding MainText}" VerticalOptions="Center" HorizontalOptions="Center" />
  <StackLayout Orientation="Vertical">
    <Label Text="Ticket Photo Management" FontSize="24"/>
    <Label Text="Make smart descriptions for ticket photos."/>
    <Button x:Name ="btnCreate" Text="Create Ticket"/>
    <Button x:Name ="btnSearch" Text="Search Ticket"/>
  </StackLayout>
</ContentPage>